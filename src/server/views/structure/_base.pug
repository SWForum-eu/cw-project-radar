doctype html
html
  head
    - if (process.env.GA_PROPERTY && process.env.GA_PROPERTY.match(/UA-\d+-\d/)) {
        - const p = process.env.GA_PROPERTY
        script.
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
          ga('set', 'anonymizeIp', true);
          ga('create', '!{p}', 'auto');
          ga('send', 'pageview');
    -  }
    title SWForum.eu Radar | #{title}
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
    block links
      link(rel='shortcut icon' type='image/png' href='/img/favicon.ico')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,400,400i,700')
      link(rel='stylesheet' href='/css/styles.css')
    block scripts
      script(type='module' defer src='/radar.js')

  body(data-alertmsg=`${alert ? alert.message : ''}`, data-alerttype=`${alert ? alert.status : ''}`)
    //- HEADER
    block header
      include _header

    //- MODALS - they are not impacting the main layout
    section#modals
    
    //- CONTENT
    main(id=pageclass)
      #alerts
      block content
        h1 This is a placeholder heading

    //- FOOTER
    block footer
      include _footer
